{
  "name": "shard-deployment-worker",
  "version": "1.0.0",
  "description": "Shard Platform Deployment Worker",
  "main": "worker.js",
  "scripts": {
    "start": "NODE_ENV=production node worker.js",
    "dev": "NODE_ENV=development nodemon worker.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "npm test -- --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "deployment",
    "ci/cd",
    "docker",
    "shard"
  ],
  "author": "Shard Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-winston": "^4.2.0",
    "fs-extra": "^11.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pino": "^8.17.1",
    "pino-pretty": "^10.2.3",
    "simple-git": "^3.28.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/coverage/**"
    ]
  }
}
